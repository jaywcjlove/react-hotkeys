{
  "name": "react-hot-keys",
  "version": "2.7.3",
  "description": "React component to listen to keydown and keyup keyboard events, defining and  dispatching keyboard shortcuts.",
  "author": "kenny wang <wowohoo@qq.com>",
  "license": "MIT",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "homepage": "https://jaywcjlove.github.io/react-hotkeys/",
  "scripts": {
    "prepare": "npm run build",

    "build": "tsbb build src/*.tsx --use-babel --cjs cjs --bail",
    "watch": "tsbb watch src/*.tsx --use-babel --cjs cjs",

    "bundle": "ncc build src/index.tsx --target web --filename react-hotkeys",
    "bundle:min": "ncc build src/index.tsx --target web --filename react-hotkeys --minify",
    "coverage": "tsbb test --coverage",
    "test": "tsbb test",
    "doc": "kkt build --app-src ./website",
    "start": "kkt start --app-src ./website"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaywcjlove/react-hotkeys"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "files": [
    "dist",
    "src",
    "esm",
    "cjs"
  ],
  "jest": {
    "coverageReporters": [
      "lcov",
      "json-summary"
    ],
    "testMatch": [
      "<rootDir>/test/*.{ts,tsx}"
    ]
  },
  "keywords": [
    "react-hot-keys",
    "react-hotkey",
    "hotkey",
    "hotkeys",
    "hotkeys-js",
    "hotkeysjs",
    "key",
    "keys",
    "keyboard",
    "shortcuts",
    "keypress"
  ],
  "peerDependencies": {
    "@babel/runtime": ">=7.10.0",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@kkt/less-modules": "^7.5.4",
    "@kkt/raw-modules": "^7.5.4",
    "@kkt/scope-plugin-options": "^7.5.4",
    "@kkt/ncc": "~1.1.1",
    "@types/classnames": "~2.3.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-test-renderer": "^18.0.7",
    "@uiw/react-github-corners": "^1.5.16",
    "@uiw/react-markdown-preview": "^5.0.3",
    "@uiw/react-shields": "^2.0.1",
    "@wcj/dark-mode": "^1.0.16",
    "classnames": "~2.5.0",
    "kkt": "^7.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "jest": "^29.7.0",
    "tsbb": "^4.2.4"
  },
  "dependencies": {
    "hotkeys-js": "^3.13.2",
    "prop-types": "^15.8.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
