{
  "name": "react-hot-keys",
  "version": "2.7.2",
  "description": "React component to listen to keydown and keyup keyboard events, defining and  dispatching keyboard shortcuts.",
  "author": "kenny wang <wowohoo@qq.com>",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "homepage": "https://jaywcjlove.github.io/react-hotkeys/",
  "scripts": {
    "prepare": "npm run build",
    "watch": "tsbb watch",
    "build": "tsbb build && npm run bundle && npm run bundle:min",
    "bundle": "ncc build src/index.tsx --target web --filename react-hotkeys",
    "bundle:min": "ncc build src/index.tsx --target web --filename react-hotkeys --minify",
    "coverage": "tsbb test --env=jsdom --coverage",
    "test": "tsbb test --env=jsdom",
    "doc": "kkt build --app-src ./website",
    "start": "kkt start --app-src ./website"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaywcjlove/react-hotkeys"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "files": [
    "dist",
    "src",
    "esm",
    "cjs"
  ],
  "jest": {
    "coverageReporters": [
      "lcov",
      "json-summary"
    ],
    "testMatch": [
      "<rootDir>/test/*.{ts,tsx}"
    ]
  },
  "keywords": [
    "react-hot-keys",
    "react-hotkey",
    "hotkey",
    "hotkeys",
    "hotkeys-js",
    "hotkeysjs",
    "key",
    "keys",
    "keyboard",
    "shortcuts",
    "keypress"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@babel/runtime": ">=7.10.0",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@kkt/less-modules": "~7.1.1",
    "@kkt/raw-modules": "~7.1.1",
    "@kkt/scope-plugin-options": "~7.1.1",
    "@kkt/ncc": "~1.0.13",
    "@types/classnames": "~2.3.1",
    "@types/jest": "~27.4.1",
    "@types/react": "~18.0.0",
    "@types/react-dom": "~18.0.0",
    "@types/react-test-renderer": "~17.0.1",
    "@uiw/react-github-corners": "~1.5.14",
    "@uiw/react-markdown-preview": "~4.2.0",
    "@uiw/react-shields": "~1.1.3",
    "@wcj/dark-mode": "~1.0.14",
    "classnames": "~2.3.1",
    "kkt": "~7.1.5",
    "react": "~18.0.0",
    "react-dom": "~18.0.0",
    "react-test-renderer": "~18.0.0",
    "jest": "~27.5.1",
    "tsbb": "~3.7.2"
  },
  "dependencies": {
    "hotkeys-js": "^3.8.1",
    "prop-types": "^15.7.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
